<Page x:Class="Calculator.Programmer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Calculator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Programmer">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name= "Hex" Grid.Column="0" Grid.Row="0" Content="HEX" FontSize="25"/>
        <Button x:Name= "Dec" Grid.Column="0" Grid.Row="1" Content="DEC" FontSize="25"/>
        <Button x:Name= "Oct" Grid.Column="0" Grid.Row="2" Content="OCT" FontSize="25"/>
        <Button x:Name= "Bin" Grid.Column="0" Grid.Row="3" Content="BIN" FontSize="25"/>


        <Button x:Name= "NumKeypad" Grid.Column="0" Grid.Row="4" Content="⌨" FontSize="25"/>
        <Button x:Name= "BitKeypad" Grid.Column="1" Grid.Row="4" Content="⠟" FontSize="25"/>
        <Button x:Name= "WordSize" Grid.Column="2" Grid.Row="4" Content="QWORD" FontSize="25"/>
        <Button x:Name= "MemStore" Grid.Column="4" Grid.Row="4" Content="MS" FontSize="25"/>

        <Button x:Name = "Bitwise" Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="5" Content="⎀ Bitwise ▼" FontSize="25" Background="Transparent"/>
        <Button x:Name = "Func" Grid.ColumnSpan="2" Grid.Column="2" Grid.Row="5" Content="≪≫ BitShift ▼"  FontSize="25" Background="Transparent"/>

        <Button Name = "A" Content = "A" Grid.Row = "6" FontSize = "30"/>
        <Button Name = "B" Content = "B" Grid.Row = "7" FontSize = "30"/>
        <Button Name = "C" Content = "C" Grid.Row = "8" FontSize = "30"/>
        <Button Name = "D" Content = "D" Grid.Row = "9" FontSize = "30"/>
        <Button Name = "E" Content = "Eˣ" Grid.Row = "10" FontSize = "30"/>
        <Button Name = "F" Content = "F" Grid.Row = "11" FontSize = "30"/>

        <Button Name = "BitShiftLeft" Content = "«" Grid.Row = "6" Grid.Column="1" FontSize = "30" />
        <Button Name = "OpenParenthesis" Content = "(" Grid.Row = "7" Grid.Column="1" FontSize = "30"/>
        <Button Name = "Seven" Content = "7" Grid.Row = "8" Grid.Column="1" FontSize = "30" />
        <Button Name = "Four" Content = "4" Grid.Row = "9" Grid.Column="1" FontSize = "30" />
        <Button Name = "One" Content = "1" Grid.Row = "10" Grid.Column="1" FontSize = "30" />
        <Button Name = "Sign" Content = "±" Grid.Row = "11" Grid.Column="1" FontSize = "30"/>

        <Button Name = "BitShiftRight" Content = "»" Grid.Row = "6" Grid.Column="2" FontSize = "30"/>
        <Button Name = "CloseParenthesis" Content = ")" Grid.Row = "7" Grid.Column="2" FontSize = "30" />
        <Button Name = "Eight" Content = "8" Grid.Row = "8" Grid.Column="2" FontSize = "30"/>
        <Button Name = "Five" Content = "5" Grid.Row = "9" Grid.Column="2" FontSize = "30"/>
        <Button Name = "Two" Content = "2" Grid.Row = "10" Grid.Column="2" FontSize = "30"/>
        <Button Name = "Zero" Content = "0" Grid.Row = "11" Grid.Column="2" FontSize = "30"/>

        <Button Name = "Clear" Content = "C" Grid.Row = "6" Grid.Column="3" FontSize = "30"/>
        <Button Name = "Percentage" Content = "%" Grid.Row = "7" Grid.Column="3" FontSize = "30"/>
        <Button Name = "Nine" Content = "9" Grid.Row = "8" Grid.Column="3" FontSize = "30"/>
        <Button Name = "Six" Content = "6" Grid.Row = "9" Grid.Column="3" FontSize = "30"/>
        <Button Name = "Three" Content = "3" Grid.Row = "10" Grid.Column="3" FontSize = "30"/>
        <Button Name = "Decimal" Content = "." Grid.Row = "11" Grid.Column="3" FontSize = "30"/>

        <Button Name = "BackSpace" Content = "⌫" Grid.Row = "6" Grid.Column="4" FontSize = "30"/>
        <Button Name = "Divide" Content = "/" Grid.Row = "7" Grid.Column="4" FontSize = "30"/>
        <Button Name = "Multiply" Content = "*" Grid.Row = "8" Grid.Column="4" FontSize = "30"/>
        <Button Name = "Minus" Content = "-" Grid.Row = "9" Grid.Column="4" FontSize = "30"/>
        <Button Name = "Add" Content = "+" Grid.Row = "10" Grid.Column="4" FontSize = "30"/>
        <Button Name = "Evaluate" Content = "=" Grid.Row = "11" Grid.Column="4" FontSize = "30" Background="MediumPurple"/>


    </Grid>
</Page>
