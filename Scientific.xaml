<Page x:Class="Calculator.Scientific"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Calculator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Scientific">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button Name="UnitAngle" Content="DEG" Grid.Column="0" Grid.Row="0"/>
        <Button Name="FixedExponent" Content="F-E" Grid.Column="1" Grid.Row="0"/>


        <Button Name="MemClear" Content="MC" Grid.Column="0" Grid.Row="1"/>
        <Button Name="MemRecall" Content="MR" Grid.Column="1" Grid.Row="1"/>
        <Button Name="MemAdd" Content="M+" Grid.Column="2" Grid.Row="1"/>
        <Button Name="MemSubtract" Content="M-" Grid.Column="3" Grid.Row="1"/>
        <Button Name="MemStore" Content="MS" Grid.Column="4" Grid.Row="1"/>

        <Button x:Name = "Trig" Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="2" Content="∠ Trigonometry ▼" FontSize="25" Background="Transparent"/>
        <Button x:Name = "Func" Grid.ColumnSpan="2" Grid.Column="2" Grid.Row="2" Content="f Function ▼"  FontSize="25" Background="Transparent"/>

        <Button Name = "SecFunc" Content = "²ⁿᵗ" Grid.Row = "3" FontSize = "30"/>
        <Button Name = "Square" Content = "x²" Grid.Row = "4" FontSize = "30"/>
        <Button Name = "SquareRoot" Content = "²√x" Grid.Row = "5" FontSize = "30"/>
        <Button Name = "Exponentiation" Content = "xʸ" Grid.Row = "6" FontSize = "30"/>
        <Button Name = "TenPow" Content = "10ˣ" Grid.Row = "7" FontSize = "30"/>
        <Button Name = "Log" Content = "log" Grid.Row = "8" FontSize = "30"/>
        <Button Name = "NatLog" Content = "ln" Grid.Row = "9" Grid.Column="0" FontSize = "30"/>

        <Button Name = "Pi" Content = "π" Grid.Row = "3" Grid.Column="1" FontSize = "30" />
        <Button Name = "Reciprocal" Content = "¹/ₓ" Grid.Row = "4" Grid.Column="1" FontSize = "30"/>
        <Button Name = "OpenParenthesis" Content = "(" Grid.Row = "5" Grid.Column="1" FontSize = "30"/>
        <Button Name = "Seven" Content = "7" Grid.Row = "6" Grid.Column="1" FontSize = "30" />
        <Button Name = "Four" Content = "4" Grid.Row = "7" Grid.Column="1" FontSize = "30" />
        <Button Name = "One" Content = "1" Grid.Row = "8" Grid.Column="1" FontSize = "30" />
        <Button Name = "Sign" Content = "±" Grid.Row = "9" Grid.Column="1" FontSize = "30"/>

        <Button Name = "Eulers" Content = "e" Grid.Row = "3" Grid.Column="2" FontSize = "30"/>
        <Button Name = "Abs" Content = "|x|" Grid.Row = "4" Grid.Column="2" FontSize = "30" />
        <Button Name = "CloseParenthesis" Content = ")" Grid.Row = "5" Grid.Column="2" FontSize = "30" />
        <Button Name = "Eight" Content = "8" Grid.Row = "6" Grid.Column="2" FontSize = "30"/>
        <Button Name = "Five" Content = "5" Grid.Row = "7" Grid.Column="2" FontSize = "30"/>
        <Button Name = "Two" Content = "2" Grid.Row = "8" Grid.Column="2" FontSize = "30"/>
        <Button Name = "Zero" Content = "0" Grid.Row = "9" Grid.Column="2" FontSize = "30"/>

        <Button Name = "Clear" Content = "C" Grid.Row = "3" Grid.Column="3" FontSize = "30"/>
        <Button Name = "Exp" Content = "exp" Grid.Row = "4" Grid.Column="3" FontSize = "30"/>
        <Button Name = "Factorial" Content = "n!" Grid.Row = "5" Grid.Column="3" FontSize = "30"/>
        <Button Name = "Nine" Content = "9" Grid.Row = "6" Grid.Column="3" FontSize = "30"/>
        <Button Name = "Six" Content = "6" Grid.Row = "7" Grid.Column="3" FontSize = "30"/>
        <Button Name = "Three" Content = "3" Grid.Row = "8" Grid.Column="3" FontSize = "30"/>
        <Button Name = "Decimal" Content = "." Grid.Row = "9" Grid.Column="3" FontSize = "30"/>

        <Button Name = "BackSpace" Content = "⌫" Grid.Row = "3" Grid.Column="4" FontSize = "30"/>
        <Button Name = "Modulu" Content = "mod" Grid.Row = "4" Grid.Column="4" FontSize = "30"/>
        <Button Name = "Divide" Content = "/" Grid.Row = "5" Grid.Column="4" FontSize = "30"/>
        <Button Name = "Multiply" Content = "*" Grid.Row = "6" Grid.Column="4" FontSize = "30"/>
        <Button Name = "Minus" Content = "-" Grid.Row = "7" Grid.Column="4" FontSize = "30"/>
        <Button Name = "Add" Content = "+" Grid.Row = "8" Grid.Column="4" FontSize = "30"/>
        <Button Name = "Evaluate" Content = "=" Grid.Row = "9" Grid.Column="4" FontSize = "30" Background="MediumPurple"/>


    </Grid>
</Page>
