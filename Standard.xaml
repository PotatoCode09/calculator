<Page x:Class="Calculator.Standard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Calculator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Standard">

    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button Name="MemClear" Content="MC" Grid.Column="0"/>
        <Button Name="MemRecall" Content="MR" Grid.Column="1"/>
        <Button Name="MemAdd" Content="M+" Grid.Column="2"/>
        <Button Name="MemSubtract" Content="M-" Grid.Column="3"/>
        <Button Name="MemStore" Content="MS" Grid.Column="4"/>


        <Button Name = "Percent" Content = "%" Grid.Row = "1" FontSize = "30"/>
        <Button Name = "Fraction" Content = "1/x" Grid.Row = "2" FontSize = "30"/>
        <Button Name = "Seven" Content = "7" Grid.Row = "3" FontSize = "30"/>
        <Button Name = "Four" Content = "4" Grid.Row = "4" FontSize = "30"/>
        <Button Name = "One" Content = "1" Grid.Row = "5" FontSize = "30"/>
        <Button Name = "Sign" Content = "±" Grid.Row = "6" FontSize = "30"/>

        <Button Name = "ClearEverything" Content = "CE" Grid.Row = "1" Grid.Column="1" FontSize = "30"/>
        <Button Name = "PowerOfTwo" Content = "x²" Grid.Row = "2" Grid.Column="1" FontSize = "30" />
        <Button Name = "Eight" Content = "8" Grid.Row = "3" Grid.Column="1" FontSize = "30"/>
        <Button Name = "Five" Content = "5" Grid.Row = "4" Grid.Column="1" FontSize = "30"/>
        <Button Name = "Two" Content = "2" Grid.Row = "5" Grid.Column="1" FontSize = "30" />
        <Button Name = "Zero" Content = "0" Grid.Row = "6" Grid.Column="1" FontSize = "30" />

        <Button Name = "Clear" Content = "C" Grid.Row = "1" Grid.Column="2" FontSize = "30" />
        <Button Name = "SquareRoot" Content = "√" Grid.Row = "2" Grid.Column="2" FontSize = "30"/>
        <Button Name = "Nine" Content = "9" Grid.Row = "3" Grid.Column="2" FontSize = "30"/>
        <Button Name = "Six" Content = "6" Grid.Row = "4" Grid.Column="2" FontSize = "30" />
        <Button Name = "Three" Content = "3" Grid.Row = "5" Grid.Column="2" FontSize = "30" />
        <Button Name = "Decimal" Content = "." Grid.Row = "6" Grid.Column="2" FontSize = "30"/>

        <Button Name = "Backspace" Content = "⌫" Grid.Row = "1" Grid.Column="3" FontSize = "30"/>
        <Button Name = "Divide" Content = "/" Grid.Row = "2" Grid.Column="3" FontSize = "30"/>
        <Button Name = "Multiply" Content = "*" Grid.Row = "3" Grid.Column="3" FontSize = "30"/>
        <Button Name = "Minus" Content = "-" Grid.Row = "4" Grid.Column="3" FontSize = "30"/>
        <Button Name = "Add" Content = "+" Grid.Row = "5" Grid.Column="3" FontSize = "30"/>
        <Button Name = "Evaluate" Content = "=" Grid.Row = "6" Grid.Column="3" FontSize = "30" Background="MediumPurple"/>

    </Grid>
</Page>
