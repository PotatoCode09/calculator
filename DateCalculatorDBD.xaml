<Page x:Class="Calculator.DateCalculatorDBD"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Calculator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DateCalculatorDBD">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Name= "From" Content= "From" Grid.Row="0" FontSize="20" HorizontalAlignment="Left" VerticalContentAlignment="Bottom"/>
        <DatePicker Name ="StartingDate" FontSize="23" Grid.Row="1" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
        <Label Name= "To" Content= "To" Grid.Row="2" FontSize="20" HorizontalAlignment="Left" VerticalContentAlignment="Bottom"/>
        <DatePicker Name ="EndDate" FontSize="23" Grid.Row="3" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
        <Label Name= "Difference" Content= "Difference" Grid.Row="4" FontSize="20" HorizontalAlignment="Left" VerticalContentAlignment="Bottom"/>
        <TextBlock Name="Answer" Grid.Row="5" Margin="5" FontSize="23" HorizontalAlignment="Left"/>
        
    </Grid>
</Page>
