<Page x:Class="Calculator.DateCalculator"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Calculator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DateCalculator">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Name = "Menu" Content = "Difference Between Dates ▼" Grid.Row = "0" FontSize = "30"  HorizontalAlignment="Left" Margin="3,3,0,5" Width="417" />
        <Label Name= "From" Content= "From" Grid.Row="1" FontSize="20" HorizontalAlignment="Left"/>
        <DatePicker Name ="StartingDate" Grid.Row="2" HorizontalAlignment="Left"/>
        <Label Name= "To" Content= "To" Grid.Row="3" FontSize="20" HorizontalAlignment="Left"/>
        <DatePicker Name ="EndDate" Grid.Row="4" HorizontalAlignment="Left"/>
        <Label Name= "Difference" Content= "Difference" Grid.Row="5" FontSize="20" HorizontalAlignment="Left"/>
        <Label Name="Answer" Content="" Grid.Row="6" FontSize="20" HorizontalAlignment="Left"/>

    </Grid>
</Page>
